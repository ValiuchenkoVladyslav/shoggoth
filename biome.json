{
  "$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",

  "files": {
    "include": ["*.json", "*.js", "*.mjs", "*.ts"],
    "ignore": [".vscode/settings.json"]
  },

  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },

  "organizeImports": {
    "enabled": true
  },

  "linter": {
    "rules": {
      "recommended": true,

      "suspicious": {
        "noConfusingVoidType": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off"
      }
    }
  },

  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "crlf"
  }
}
